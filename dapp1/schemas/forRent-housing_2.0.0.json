{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "required": [
    "name",
    "description"
  ],
  "properties": {
    "dappSchemaId": {
      "const": "https://dapp.originprotocol.com/schemas/forRent-housing_2.0.0.json"
    },
    "listingType": {
      "const": "fractional"
    },
    "category": {
      "const": "schema.forRent"
    },
    "slotLength": {
      "type": "integer",
      "title": "schema.slotLength",
      "default": 1
    },
    "slotLengthUnit": {
      "type": "string",
      "enum": [
        "schema.minutes",
        "schema.hours",
        "schema.days",
        "schema.weeks",
        "schema.months",
        "schema.years"
      ],
      "default": "schema.days"
    },
    "name": {
      "type": "string",
      "title": "schema.title",
      "minLength": 3,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "title": "schema.description",
      "minLength": 10,
      "maxLength": 1024
    },
    "weekdayPricing": {
      "type": "number",
      "title": "schema.weekdayPricing"
    },
    "weekendPricing": {
      "type": "number",
      "title": "schema.weekendPricing"
    },
    "pictures": {
      "type": "array",
      "title": "schema.selectPhotos",
      "items": {
        "type": "string",
        "format": "data-url"
      }
    },
    "sellerSteps": {
      "type": "string",
      "title": "schema.sellerSteps",
      "enum": [
        "schema.messageBuyer",
        "schema.prepareProperty",
        "schema.rateBuyer"
      ]
    },
    "subCategory": {
      "const": "schema.housing"
    }
  }
}