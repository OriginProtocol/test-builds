{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "required": [
    "name",
    "description",
    "price",
    "dappSchemaId",
    "category",
    "subCategory",
    "listingType"
  ],
  "properties": {
    "dappSchemaId": {
      "const": "https://dapp.originprotocol.com/schemas/announcements-artists_1.0.0.json"
    },
    "listingType": {
      "const": "unit"
    },
    "category": {
      "const": "schema.announcements"
    },
    "name": {
      "type": "string",
      "title": "schema.title",
      "minLength": 3,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "title": "schema.description",
      "minLength": 10,
      "maxLength": 1024
    },
    "subCategory": {
      "const": "schema.artists"
    },
    "pictures": {
      "type": "array",
      "title": "schema.selectPhotos",
      "items": {
        "type": "string",
        "format": "data-url"
      }
    },
    "price": {
      "const": 0
    }
  }
}